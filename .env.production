# Variables de entorno para CogniChat - PRODUCCIÓN
# ⚠️ IMPORTANTE: Configurar estas variables según el entorno de producción

# ========================================
# CONFIGURACIÓN DE OLLAMA - PRODUCCIÓN
# ========================================
# URL del servidor Ollama en producción (puede ser un contenedor Docker)
OLLAMA_BASE_URL=http://ollama:11434
# Timeout aumentado para producción (conexiones más lentas)
OLLAMA_TIMEOUT=300

# ========================================
# CONFIGURACIÓN DE MODELOS - PRODUCCIÓN
# ========================================
# Modelos optimizados para producción (verificar disponibilidad)
DEFAULT_LLM_MODEL=deepseek-r1:7b
DEFAULT_EMBEDDING_MODEL=nomic-embed-text:latest

# ========================================
# CONFIGURACIÓN RAG OPTIMIZADA - PRODUCCIÓN
# ========================================
# Configuración optimizada para mejor rendimiento en producción
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
MAX_RETRIEVAL_DOCS=10
SIMILARITY_THRESHOLD=0.65

# ========================================
# CONFIGURACIÓN DE GENERACIÓN - PRODUCCIÓN
# ========================================
# Tokens limitados para mejor rendimiento
MAX_RESPONSE_TOKENS=2500

# ========================================
# CONFIGURACIÓN DE ARCHIVOS - PRODUCCIÓN
# ========================================
# Límite de archivos más conservador para producción
MAX_FILE_SIZE_MB=50

# ========================================
# CONFIGURACIÓN DE LOGS - PRODUCCIÓN
# ========================================
# Nivel de logs para producción (menos verboso)
LOG_LEVEL=WARNING

# ========================================
# CONFIGURACIÓN DE TRAZABILIDAD - PRODUCCIÓN
# ========================================
# Trazabilidad deshabilitada en producción para mejor rendimiento
ENABLE_CHUNK_LOGGING=false
ENABLE_DEBUG_MODE=false
ENABLE_HISTORY_TRACKING=true

# ========================================
# CONFIGURACIÓN DE CACHE - PRODUCCIÓN
# ========================================
# Cache optimizado para producción
CACHE_DIR=/app/data/cache
MAX_CACHE_SIZE=2000
CACHE_EXPIRY_HOURS=48

# ========================================
# CONFIGURACIÓN DE ANÁLISIS CUALITATIVO - PRODUCCIÓN
# ========================================
# Análisis optimizado para producción
ENABLE_ADVANCED_ANALYSIS=true
MAX_TOPICS=8
MIN_CLUSTER_SIZE=3
DEFAULT_CLUSTERING_METHOD=kmeans
NLTK_DATA_PATH=/app/data/nltk_data
SPACY_MODEL=es_core_news_sm

# ========================================
# CONFIGURACIÓN DE VISUALIZACIONES - PRODUCCIÓN
# ========================================
# Visualizaciones optimizadas para web
PLOT_WIDTH=600
PLOT_HEIGHT=450
WORDCLOUD_WIDTH=600
WORDCLOUD_HEIGHT=300
CONCEPT_MAP_ITERATIONS=30

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS - PRODUCCIÓN
# ========================================
# Rutas absolutas para contenedores Docker
DB_PATH=/app/data/cognichat.db
VECTOR_DB_PATH=/app/data/chroma_db

# ========================================
# CONFIGURACIÓN DE UI - PRODUCCIÓN
# ========================================
# Configuración de interfaz para producción
DEFAULT_LANGUAGE=es
THEME=light
MAX_UPLOAD_SIZE_MB=100

# ========================================
# CONFIGURACIÓN DE SEGURIDAD - PRODUCCIÓN
# ========================================
# Límites de seguridad más estrictos para producción
MAX_QUERY_LENGTH=800
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW_MINUTES=60

# ========================================
# CONFIGURACIÓN ESPECÍFICA DE DOCKER
# ========================================
# Puerto de la aplicación en el contenedor
PORT=8501
# Host de la aplicación (0.0.0.0 para Docker)
HOST=0.0.0.0
# Configuración de Streamlit para producción
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false